<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jsignup"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/sender_message"
        android:onClick="sendUserToSignupActvity"
        android:shadowColor="#E91E63"
        android:text="signup"
        android:textColor="@color/simpleButtonTextColor"
        android:textColorHint="#E91E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/jpassword"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

    <ImageView
        android:id="@+id/jicon"
        android:layout_width="202dp"
        android:layout_height="202dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508"
        app:srcCompat="@drawable/logo_pic" />

    <EditText
        android:id="@+id/jemail"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:drawableStart="@drawable/ic_stat_name_email"
        android:drawableLeft="@drawable/ic_stat_name_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/jpassword"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_stat_name_lock"
        android:drawableLeft="@drawable/ic_stat_name_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/jemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jemail"
        app:layout_constraintTop_toBottomOf="@+id/jemail" />

    <Button
        android:id="@+id/jlogin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/sender_message"
        android:onClick="loginCheck"
        android:shadowColor="#E91E63"
        android:text="@string/login"
        android:textColor="@color/simpleButtonTextColor"
        android:textColorHint="#E91E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/jsignup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jpassword"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="or"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/jsignup"
        app:layout_constraintStart_toEndOf="@+id/jlogin"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Forgot Password ?"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>