<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoBackground"
    app:layout_scrollFlags="scroll"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jsignup"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:background="@drawable/button"
        android:onClick="sendUserToSignupActvity"
        android:shadowColor="#E91E63"
        android:text="sign up"
        android:textColor="@color/simpleButtonTextColor"
        android:textColorHint="#E91E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/jlogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jlogin"
        app:layout_constraintTop_toBottomOf="@+id/jlogin" />

    <ImageView
        android:id="@+id/jicon"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_pic" />

    <EditText
        android:id="@+id/jemail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_stat_name_email"
        android:drawableLeft="@drawable/ic_stat_name_email"
        android:ems="10"
        android:hint="Email"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/jpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jicon" />

    <EditText
        android:id="@+id/jpassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/text_field"
        android:drawableStart="@drawable/ic_stat_name_lock"
        android:drawableLeft="@drawable/ic_stat_name_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/jemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jemail"
        app:layout_constraintTop_toBottomOf="@+id/jemail" />

    <Button
        android:id="@+id/jlogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:onClick="loginCheck"
        android:shadowColor="#E91E63"
        android:text="@string/login"
        android:textColor="#FCFDFF"
        android:textColorHint="#E91E63"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="12dp"
        android:text="Forgot Password ?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/jpassword"
        app:layout_constraintTop_toBottomOf="@+id/jpassword" />

</androidx.constraintlayout.widget.ConstraintLayout>